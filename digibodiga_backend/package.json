{
  "name": "digibodiga_backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "node tests/behaviour/test.js",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "db:migrate": "npx prisma migrate dev --name init",
    "db:push": "npx prisma db push",
    "db:seed": "node prisma/seed.js",
    "db:seed:locations": "node prisma/seedLocationsV2.js",
    "db:studio": "npx prisma studio",
    "system:restart": "sudo systemctl disable myapp.service && sudo systemctl stop myapp.service && sudo systemctl daemon-reload && sudo systemctl enable myapp.service && sudo systemctl start myapp.service && sudo systemctl restart caddy",
    "server:update_except_db": "git pull && npm install && npm run system:restart",
    "db:seedMockProfiles": "node prisma/seedMocksProfilesV2.js && node prisma/seedMockAvailability.js",
    "db:seedAppointments": "node prisma/sampleAppointmentsSeeder.js",
    "db:seedMockAvailability": "node prisma/seedMockAvailability.js",
    "db:reset": "npx prisma format && rm -rf prisma/migrations && npx prisma migrate reset --force  && npx prisma db push --accept-data-loss && npx prisma migrate dev --name init && npx prisma generate && npm run db:seed && npm run db:seedMockProfiles && npm run system:restart",
    "db:reset:hard": "npx prisma db push --force-reset && npm run db:seed && npm run db:seedMockProfiles && npm run system:restart",
    "db:reset:users": "node prisma/deleteAllUsers.js"
  },
  "keywords": [],
